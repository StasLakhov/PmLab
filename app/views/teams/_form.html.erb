<%= form_for @team do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :position %><br>
      <%= f.text_area :position %>
    </p>
    <p>
      <%= f.label :phone %><br>
      <%= f.text_area :phone %>
    </p>
    <p>
      <%= f.label :skype %><br>
      <%= f.text_area :skype %>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.text_area :email %>
    </p>
    <div class='datepicker_form'>
      <%= f.label :birthday %>
      <div class="input-group date">
        <%= f.text_field :birthday, class: 'form-control' %>
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>

    <div class='datepicker_form'>
      <%= f.label :hired %>
      <div class="input-group date">
        <%= f.text_field :hired, class: 'form-control' %>
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>
    <p>
      <%= f.submit %>
    </p>

    <%= javascript_include_tag 'datepicker' %>
    
<% end %>