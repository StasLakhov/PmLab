<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Phone</th>
    <th>Skype</th>
    <th>Email</th>
    <th>Birthday</th>
    <th>Hired At</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.position %></td>
        <td><%= team.phone %></td>
        <td><%= team.skype %></td>
        <td><%= team.email %></td>
        <td><%= team.birthday %></td>
        <td><%= team.hired %></td>
        <td class="icon-td"><%= link_to '', edit_team_path(team), class: "glyphicon glyphicon-edit icon-edit" %></td>
        <td><%= link_to '', team,
                            method: :delete,
                            data: { confirm: 'Are you sure?' },
                            class: "glyphicon glyphicon-trash" %>
        </td>
      </tr>
  <% end %>
</table>

<p>
  <%= link_to new_team_path, class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-plus-sign"></i> Add Member
  <% end %>
</p>

