<h2>Coworkers</h2>

<% @customer.coworkers.each do |coworker| %>
    <p>
      <strong>Name:</strong>
      <%= coworker.coworker_name %>
    </p>

    <p>
      <strong>Position:</strong>
      <%= coworker.coworker_position %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= coworker.coworker_phone %>
    </p>

    <p>
      <strong>Skype:</strong>
      <%= coworker.coworker_skype %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= coworker.coworker_email %>
    </p>
<% end %>