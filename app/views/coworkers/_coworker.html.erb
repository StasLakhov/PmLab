<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Phone</th>
    <th>Skype</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% @customer.coworkers.each do |coworker| %>
      <tr>
        <td><%= coworker.coworker_name %></td>
        <td><%= coworker.coworker_position %></td>
        <td><%= coworker.coworker_phone %></td>
        <td><%= coworker.coworker_skype %></td>
        <td><%= coworker.coworker_email %></td>
        <td class="icon-td"><%= link_to '', edit_customer_coworker_path(coworker), class: "glyphicon glyphicon-edit icon-edit" %></td>
        <td class="icon-td"><%= link_to '', [coworker.customer, coworker],
                                        method: :delete,
                                        data: { confirm: 'Are you sure?' },
                                        class: "glyphicon glyphicon-trash" %>
        </td>
      </tr>
  <% end %>
</table>

