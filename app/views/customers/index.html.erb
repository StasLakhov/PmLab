<h3>Customers</h3>

<table>
  <tr>
    <th>Customer</th>
    <th colspan="3"></th>
  </tr>

  <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= link_to '', customer_projects_path(customer.id), class: "glyphicon glyphicon-briefcase" %></td>
        <td><%= link_to '', customer_path(customer), class: "glyphicon glyphicon-folder-open icon-open" %></td>
        <td><%= link_to '', edit_customer_path(customer), class: "glyphicon glyphicon-edit icon-edit" %></td>
        <td><%= link_to '', customer,
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "glyphicon glyphicon-remove-circle icon-remove" %>
        </td>
      </tr>
  <% end %>
</table>


<p>
  <%= link_to new_customer_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-plus-sign"></i> Add Customer
  <% end %>
</p>