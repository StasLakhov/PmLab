<%= form_for @customer do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>


    <div class='actions'>
      <%= f.submit :class => 'btn btn-default' %>
    </div>


    <p>
      <%= link_to 'Back', customers_path, class: "btn btn-default" %>
    </p>

<% end %>