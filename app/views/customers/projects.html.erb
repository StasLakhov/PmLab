<h3>Customer Projects</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Project</th>
    <th>Description</th>
    <th>Status</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Receive Date</th>
    <th>Customer</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% @customer.projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.status %></td>
        <td><%= project.startdate %></td>
        <td><%= project.enddate %></td>
        <td><%= project.receive %></td>
        <td><%= project.customer.name %></td>
        <td><%= link_to '', project_path(project), class: "glyphicon glyphicon-folder-open icon-open" %></td>
        <td><%= link_to '', edit_project_path(project), class: "glyphicon glyphicon-edit icon-edit" %></td>
        <td><%= link_to '', project,
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "glyphicon glyphicon-remove-circle icon-remove" %>
        </td>
      </tr>
  <% end %>

</table>

<p>
  <%= link_to new_project_path, class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-plus-sign"></i> Add Project
  <% end %>
</p>