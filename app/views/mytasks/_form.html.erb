<%= form_for @mytask do |f| %>

    <div class='input_form'>
      <%= f.label :taskname %><br>
      <%= f.text_field :taskname, class: 'form-control' %>
    </div>

    <div class='input_form'>
      <%= f.label :taskcontent %><br>
      <%= f.text_field :taskcontent, class: 'form-control' %>
    </div>

    <div class='select_form'>
      <%= f.label :taskstatus %><br>
      <%= select(:mytask, :taskstatus, [ ['Waiting...', 'Waiting...'],
                                      ['Done', 'Done'],
                                      ['Active', 'Active'],
                                      ['In Testing', 'In Testing'] ],
                                      :include_blank => true,
                                      :default => nil) %>
    </div>

    <div class='datepicker_form'>
      <%= f.label :createtask %>
      <div class="input-group date">
        <%= f.text_field :createtask, class: 'form-control' %>
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>

    <div class='datepicker_form'>
      <%= f.label :endtask %>
      <div class="input-group date">
        <%= f.text_field :endtask, class: 'form-control' %>
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>


    <div class='actions'>
      <%= f.submit :class => 'btn btn-default' %>
    </div>

    <p>
      <%= link_to 'Back', mytasks_path, class: 'btn btn-default' %>
    </p>



    <%= javascript_include_tag 'datepicker' %>

<% end %>