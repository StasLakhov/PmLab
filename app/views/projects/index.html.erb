<h3>Projects</h3>

<table>
  <tr>
    <th>Project</th>
    <th>Description</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>

  <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Open', project_path(project), class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', project,
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "btn btn-default" %>
        </td>
      </tr>
  <% end %>
</table>


<p>
  <%= link_to new_project_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-plus-sign"></i> Add Project
  <% end %>
</p>