<h3>Project Details</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Project</th>
    <th>Description</th>
    <th>Status</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Receive Date</th>
    <th>Customer</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @project.name %></td>
      <td><%= @project.description %></td>
      <td><%= @project.status %></td>
      <td><%= @project.startdate %></td>
      <td><%= @project.enddate %></td>
      <td><%= @project.receive %></td>
      <td><%= !@project.customer.nil? ? @project.customer.name : '' %></td>
      <td><%= link_to 'Edit', edit_project_path, class: "btn btn-default" %></td>
      <td><%= link_to 'Delete', @project,
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: "btn btn-default" %>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <%= link_to 'Back', projects_path, class: "btn btn-default" %>
</p>