<%= form_for @project do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.label :status %><br>
      <%= select(:project, :status, [ ['Waiting...', 'Waiting...'],
                                      ['Done', 'Done'],
                                      ['Active', 'Active'],
                                      ['In Testing', 'In Testing'] ],
                                      :include_blank => true,
                                      :default => nil) %>
    </p>

    <p>
      <%= f.label :startdate %><br>
      <%= f.text_field :startdate, data:{ provide:'datepicker' } %>
    </p>

    <p>
      <%= f.label :enddate %><br>
      <%= f.text_field :enddate, data:{ provide:'datepicker' } %>
    </p>

    <p>
      <%= f.label :receive %><br>
      <%= f.text_field :receive, data:{ provide:'datepicker' } %>
    </p>

    <p>
      <%= collection_select(:project, :customer_id, Customer.all, :id, :name, :include_blank => true, :default => nil) %>
    </p>

    <p>
      <%= f.submit :class => "btn btn-default" %>
    </p>

    <p>
      <%= link_to 'Back', projects_path, class: "btn btn-default" %>
    </p>

<% end %>