<%= form_for @project do |f| %>

    <div class='input_form'>
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='input_form'>
      <%= f.label :description %><br>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class='select_form'>
      <%= f.label :status %><br>
      <%= select(:project, :status, [ ['Waiting...', 'Waiting...'],
                                      ['Done', 'Done'],
                                      ['Active', 'Active'],
                                      ['In Testing', 'In Testing'] ],
                                      :include_blank => true,
                                      :default => nil) %>
    </div>

    <div class='datepicker_form'>
      <%= f.label :startdate %>
      <div class="input-group date">
        <%= f.text_field :startdate, class: 'form-control' %>
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>

    <div class='datepicker_form'>
      <%= f.label :enddate %>
      <div class="input-group date">
        <%= f.text_field :enddate, class: 'form-control' %>
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>

    <div class='datepicker_form'>
      <%= f.label :receive %>
      <div class="input-group date">
        <%= f.text_field :receive, class: 'form-control'  %>
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
      </div>
    </div>

    <div class='select_form'>
      <%= collection_select(:project, :customer_id, Customer.all, :id, :name, :include_blank => true, :default => nil) %>
    </div>

    <div class='actions'>
      <%= f.submit :class => 'btn btn-default' %>
    </div>

    <p>
      <%= link_to 'Back', projects_path, class: 'btn btn-default' %>
    </p>



    <%= javascript_include_tag 'datepicker' %>

<% end %>